<div class="container">
  <div class="row">
    <div class="text-center">

    <h1>Songbook</h1>
    <h4><%= link_to "Add song", new_song_path %></h4>

    <% current_user.songs.each do |song| %>

    <div class="row">
      <div class="well col-sm-4 col-md-offset-4">

        <% if song.seconds < 10 %>
        <%= song.title %> <%= song.minutes %>:0<%= song.seconds %>
        <% else %>
        <%= song.title %> <%= song.minutes %>:<%= song.seconds %>
        <% end %>

      </div>
    </div>
    <% end %>

    <h4><%= link_to "Back", dashboard_path %></h4>
    </div>
  </div>
</div>
