<div class="container">
  <div class="row">
    <div class="col-sm-4 text-center col-md-offset-4">

      <h1>New Song page</h1>

      <%= form_for [@song] do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title, :class => "form-control" %>

        <%= f.label :minutes %>
        <%= f.number_field :minutes, :class => "form-control" %>

        <%= f.label :seconds %>
        <%= f.number_field :seconds, :class => "form-control" %>

        <br>

        <%= f.submit "Submit", :class=>"btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
