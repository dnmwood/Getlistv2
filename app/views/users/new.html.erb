<hr class="title-divider">
        <div class="sign_form">
          <%= form_for @user do |f| %>

            <!-- start of error messages -->
            <% if @user.errors.any? %>
              <h2><%= pluralize(@user.errors.count, "error") %> Prohibited this user from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            <% end %>

            <!-- start of form field -->
            <div class="form-group col-submit">
              <div class="field-title">
                <h5 class="5header">Enter Your Name Here!</h5>
                <%= f.text_field :name, placeholder: "First and last name", :class => "form-control" %>
              </div>
            </div>
            <div class="form-group col-submit">
              <div class="field-title">
                <h5 class="5header">Your Email Address</h5>
                <%= f.email_field :email, placeholder: "Email address", :class => "form-control" %>
              </div>
            </div>
            <div class="form-group col-submit">
              <div class="field-title">
                <h5 class="5header">Your Password</h5>
                <%= f.password_field :password, placeholder: "Password", :class => "form-control" %>
              </div>
            </div>
            <div class="form-group col-submit">
              <div class="field-title">
                <h5 class="5headerw">Confirm Password</h5>
                <%= f.password_field :password, placeholder: "Confirm password", :class => "form-control" %>
              </div>
            </div>
            <div class="col-bottom">
              <div class="action">
                <%= f.button :submit, :class => "btn btn-warning btn-lg btn-secondary sharp btn-reg"%>
              </div>
              <p class="already-have-account"><a href="#">Already have an account?</a></p>
            </div>
          <% end %>
        </div>
